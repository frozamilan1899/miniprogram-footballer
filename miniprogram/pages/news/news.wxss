/* news.wxss */
.page-body {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}

.mycell {
  display: flex;
  flex-direction: row;
  background-color: white;
}

.mycell-img {
  margin-right:20rpx;
  vertical-align:center;
  width:200px;
  height:140px;
}

.mycell-title {
  color: #333;
  font-size: 30rpx;
  display: flex;
  justify-content: left;
  align-items: left;
}

.mycell-desc {
  color: #B5B5B5;
  font-size: 24rpx;
  display: flex;
  justify-content: left;
  align-items: left;
  margin-top: 20rpx;
}

.mycell-time {
  color: #B5B5B5;
  font-size: 24rpx;
  display: flex;
  justify-content: left;
  align-items: left;
  margin-top: 5rpx;
}

.bottom-line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}