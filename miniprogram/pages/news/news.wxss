/* news.wxss */
.page-body {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}

.mycell {
  display: flex;
  flex-direction: row;
  background-color: white;
}

.mycell-img {
  margin-right:10px;
  vertical-align:top;
  width:130px;
  height:91px;
}

.mycell-title {
  color: #333;
  font-size: 30rpx;
}

.mycell-desc-time {
  color: #B5B5B5;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.bottom-line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}