/* list.wxss */

.page-body {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}

.userInfo {
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #333;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}

.userAvatar {
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.mycell {
  color: #333;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.mycell-expired {
  color: #666;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

